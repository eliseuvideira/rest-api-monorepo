{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "target": "ES2020",
    "module": "CommonJS",
    "removeComments": true,
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["node_modules/@types", "src/@types"],
    "declaration": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib", "test"]
}
